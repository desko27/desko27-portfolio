{
  "name": "desko27-portfolio",
  "version": "1.0.0",
  "description": "",
  "main": "src/api.js",
  "dependencies": {
    "express": "^4.14.0"
  },
  "devDependencies": {
    "autoprefixer-loader": "^3.2.0",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "browser-sync": "^2.17.0",
    "css-loader": "^0.25.0",
    "jshint": "^2.9.3",
    "jshint-loader": "^0.8.3",
    "mkdirp": "^0.5.1",
    "onchange": "^3.0.2",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "supervisor": "^0.11.0",
    "wait-on": "^1.5.3",
    "webpack": "^1.13.2"
  },
  "scripts": {
    "start": "npm run start:api | npm run start:client",
    "start:api": "supervisor src/api.js",
    "start:client": "npm run client:onchange | npm run client:bsync | npm run client:build",
    "client:onchange": "onchange \"src/client/*.html\" -- npm run client:build:html",
    "client:bsync": "wait-on http://localhost:8080 && browser-sync start --proxy localhost:8080 --port 5000 --ui-port 5001 --files \"src/client/dist/*.html\"",
    "client:clean": "rm -rf src/client/dist",
    "client:build": "npm run client:clean && npm run client:build:path && npm run client:build:html && npm run client:build:webpack",
    "client:build:path": "mkdirp src/client/dist",
    "client:build:html": "cp -f src/client/*.html src/client/dist/",
    "client:build:webpack": "webpack-dev-server -d --inline --progress --colors",
    "client-production:build": "npm run client:clean && npm run client:build:path && npm run client:build:html && npm run client-production:build:webpack",
    "client-production:build:webpack": "webpack -p"
  },
  "author": "desko27",
  "license": "ISC"
}
